<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.marcinwroblewski.aplikacja_dzieci.Sequence.SequenceMenu"
    android:background="@drawable/sequence_bg">

    <include
        android:id="@id/action_bar"
        layout="@layout/fake_action_bar"/>

    <RelativeLayout
        android:id="@+id/app_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                android:id="@+id/two_elements_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                    <TextView
                        android:id="@+id/two_elements_label"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_controls_heigth"

                        android:text="Dwuelementowe"
                        android:gravity="center"
                        android:textSize="@dimen/defalut_text_size"
                        android:background="@color/blue_background"
                        android:textColor="@color/white"
                        />

                    <LinearLayout
                        android:id="@+id/first_opt_2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@id/two_elements_label"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"

                        android:clickable="true"
                        android:onClick="goToSequence">
                        <ImageView
                            android:id="@+id/sun_img"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/sun"
                            android:background="@color/white_background"
                            android:tag="sun"
                            />

                        <ImageView
                            android:id="@+id/cloud_img"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/cloud"
                            android:background="@color/white_background"
                            android:layout_toRightOf="@id/sun_img"
                            android:tag="cloud"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/second_opt_2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@id/first_opt_2"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"

                        android:clickable="true"
                        android:onClick="goToSequence">

                        <ImageView
                            android:id="@+id/car_img"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/car"
                            android:background="@color/white_background"
                            android:tag="car"/>

                        <ImageView
                            android:id="@+id/plane_img"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/plane"
                            android:background="@color/white_background"
                            android:layout_toRightOf="@id/car_img"
                            android:tag="plane"/>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/three_elements_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/three_elements_label"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_controls_heigth"

                        android:text="TrÃ³jelementowe"
                        android:gravity="center"
                        android:textSize="@dimen/defalut_text_size"
                        android:background="@color/blue_background"
                        android:textColor="@color/white"
                        />

                    <LinearLayout
                        android:id="@+id/first_opt_3"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@id/three_elements_label"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"

                        android:clickable="true"
                        android:onClick="goToSequence">

                        <ImageView
                            android:id="@+id/car_img2"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/car"
                            android:background="@color/white_background"

                            android:tag="car"/>

                        <ImageView
                            android:id="@+id/plane_img2"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/plane"
                            android:background="@color/white_background"
                            android:layout_toRightOf="@id/car_img2"
                            android:tag="plane"/>

                        <ImageView
                            android:id="@+id/ship_img2"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ship"
                            android:background="@color/white_background"
                            android:layout_toRightOf="@id/plane_img2"
                            android:tag="ship"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/second_opt_3"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_below="@id/first_opt_3"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"

                        android:clickable="true"
                        android:onClick="goToSequence">

                        <ImageView
                            android:id="@+id/sun_img2"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/sun"
                            android:background="@color/white_background"
                            android:tag="sun"/>

                        <ImageView
                            android:id="@+id/cloud_img2"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/cloud"
                            android:background="@color/white_background"
                            android:layout_toRightOf="@id/sun_img2"
                            android:tag="cloud"/>

                        <ImageView
                            android:id="@+id/goat_img2"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/goat"
                            android:background="@color/white_background"
                            android:layout_toRightOf="@id/cloud_img2"
                            android:tag="goat"/>
                    </LinearLayout>



                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</RelativeLayout>
