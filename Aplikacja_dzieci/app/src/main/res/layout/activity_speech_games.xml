<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.marcinwroblewski.aplikacja_dzieci.Menus.SpeechGames"
    android:background="@drawable/app_background_vowel">

    <!-- Fake ActionBar :3 -->
    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/white_background"
        >

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:padding="@dimen/action_bar_padding"

            android:clickable="true"
            android:onClick="sendBack"/>

        <TextView
            android:id="@+id/action_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/action_bar_padding"

            android:text="Mowa bierna"
            android:textSize="@dimen/action_bar_text_size"
            android:textColor="@color/blue"/>

        <ImageView
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Przycisk ustawień"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/action_bar_padding"
            android:src="@drawable/settings"
            android:layout_centerVertical="true"
            android:padding="@dimen/action_bar_padding"

            android:clickable="true"
            android:onClick="sendToSettings"/>

        <ImageView
            android:id="@+id/print_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Przycisk wydruku"
            android:layout_alignRight="@id/settings_button"
            android:layout_marginRight="50dp"
            android:src="@drawable/print"
            android:layout_centerVertical="true"
            android:padding="@dimen/action_bar_padding"

            />

    </RelativeLayout>
    <!-- Fake ActionBar :| -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar"
        android:paddingLeft="@dimen/app_margin"
        android:paddingRight="@dimen/app_margin">

            <LinearLayout
                android:id="@+id/app_container"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/vowel_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_controls_heigth"
                    android:layout_marginTop="15dp"


                    android:text="Samogłoski"
                    android:textColor="@color/blue"
                    android:background="@color/white_background"
                    android:gravity="center"
                    android:textSize="@dimen/defalut_text_size"/>

                        <LinearLayout
                            android:id="@+id/vowels_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                                <Button
                                    android:id="@+id/vowels_learn"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.1"
                                    android:layout_height="@dimen/default_controls_heigth"

                                    android:text="Nauka"
                                    android:textColor="@color/white"
                                    android:background="@color/blue_background"
                                    android:gravity="center"
                                    android:textSize="@dimen/defalut_text_size"

                                    android:onClick="goTo"/>

                                <Button
                                    android:id="@+id/vowels_game"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.1"
                                    android:layout_height="@dimen/default_controls_heigth"

                                    android:text="Gra"
                                    android:textColor="@color/white"
                                    android:background="@color/blue_background"
                                    android:gravity="center"
                                    android:textSize="@dimen/defalut_text_size"

                                    android:onClick="goTo"/>

                        </LinearLayout>

                <TextView
                    android:id="@+id/onomatopoieic_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_controls_heigth"
                    android:layout_marginTop="15dp"


                    android:text="Wyrazy dźwiękonaśladowcze"
                    android:textColor="@color/blue"
                    android:background="@color/white_background"
                    android:gravity="center"
                    android:textSize="@dimen/defalut_text_size"/>

