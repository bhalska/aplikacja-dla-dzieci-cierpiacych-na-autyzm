                </LinearLayout>


                <TextView
                    android:id="@+id/clothes_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_controls_heigth"
                    android:layout_marginTop="15dp"


                    android:text="Ciuchy"
                    android:textColor="@color/blue"
                    android:background="@color/white_background"
                    android:gravity="center"
                    android:textSize="@dimen/defalut_text_size"/>


                <LinearLayout
                    android:id="@+id/clothes_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/table_elements_description">
                    <Button
                        android:id="@+id/clothes_learn"
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="@dimen/default_controls_heigth"

                        android:text="Nauka"
                        android:textColor="@color/white"
