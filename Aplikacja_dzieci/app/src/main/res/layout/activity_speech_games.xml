                </LinearLayout>


                <TextView
                    android:id="@+id/toys_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_controls_heigth"
                    android:layout_marginTop="15dp"


                    android:text="Zabawki"
                    android:textColor="@color/blue"
                    android:background="@color/white_background"
                    android:gravity="center"
                    android:textSize="@dimen/defalut_text_size"/>


                <LinearLayout
                    android:id="@+id/toys_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/table_elements_description">
                    <Button
