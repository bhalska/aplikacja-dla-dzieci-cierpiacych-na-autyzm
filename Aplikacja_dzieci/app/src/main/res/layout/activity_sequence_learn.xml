<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sequence_bg"
    android:orientation="horizontal"
    tools:context=".MyActivity"
    >

    <!-- Fake ActionBar :3 -->
    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/white_background"
        >

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="sendBack"

            android:padding="@dimen/action_bar_padding"
            android:src="@drawable/back" />









        <TextView
            android:id="@+id/action_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/action_bar_padding"

            android:text="Samogłoski"
            android:textColor="@color/blue"
            android:textSize="@dimen/action_bar_text_size" />

        <ImageView
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/action_bar_padding"
            android:clickable="true"
            android:contentDescription="Przycisk ustawień"
            android:onClick="sendToSettings"

            android:padding="@dimen/action_bar_padding"
            android:src="@drawable/settings" />

        <ImageView
            android:id="@+id/print_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/settings_button"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:contentDescription="Przycisk wydruku"
            android:padding="@dimen/action_bar_padding"
            android:src="@drawable/print"

            />

    </RelativeLayout>
    <!-- Fake ActionBar :| -->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_bar"
        android:layout_centerHorizontal="true"
        android:background="@color/blue_background">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center">




            <ImageView
                android:id="@+id/first_seq_element"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/sun_big"/>

            <ImageView
                android:id="@+id/second_seq_element"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/first_seq_element"
                android:layout_weight="1"
                android:src="@drawable/car"
                />

            <ImageView
                android:id="@+id/third_seq_element"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_toRightOf="@id/second_seq_element"
                android:layout_weight="1" />


        </LinearLayout>

    </LinearLayout>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_bar"

        android:background="@color/white_background"
        android:clickable="true"

        android:onClick="reset"
        android:src="@drawable/refresh" />


    <RelativeLayout
        android:id="@id/app_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_bar">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true"
            android:background="@color/white_background"
            android:src="@drawable/car" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image1"
            android:background="@color/white_background"
            android:src="@drawable/sun_big" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image2"
            android:background="@color/white_background"
            android:src="@drawable/cloud_big" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/image1"
            android:background="@color/white_background"
            android:src="@drawable/car" />

        <ImageView
            android:id="@+id/image5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/image4"
            android:background="@color/white_background"
            android:src="@drawable/sun_big" />

        <ImageView
            android:id="@+id/image6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image3"
            android:background="@color/white_background"
            android:src="@drawable/cloud_big" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/container1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_weight="0.1"
                android:background="@color/white_background"
                />

            <ImageView
                android:id="@+id/container2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_toRightOf="@id/container1"
                android:layout_weight="0.1"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/container3"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_toRightOf="@id/container2"
                android:layout_weight="0.1"
                android:background="@color/white_background"/>

            <ImageView
                android:id="@+id/container4"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_toRightOf="@id/container3"
                android:layout_weight="0.1"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/container5"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_toRightOf="@id/container4"
                android:layout_weight="0.1"
                android:background="@color/white_background"/>

            <ImageView
                android:id="@+id/container6"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_toRightOf="@id/container5"
                android:layout_weight="0.1"
                android:background="@color/white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/debug"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="XD"

            android:textColor="#fff"

            />










    </RelativeLayout>


</RelativeLayout>
